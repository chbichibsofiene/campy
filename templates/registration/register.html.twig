{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    body {
        background-image: url('{{ asset('uploads/images/login.png')}}');
        background-size: cover;
        background-position: center;
    }
</style>
    <div class="container security-form">
        <div class="login-form">
            <h1>Register</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                
                {{ form_widget(registrationForm.nom,{'attr':{'class':'form form-control','placeholder':'Nom'}}) }}
                <br>
                {{ form_widget(registrationForm.email,{'attr':{'class':'form form-control','placeholder':'Email'}}) }}
                <br>
                {{ form_widget(registrationForm.plainPassword,{'attr':{'class':'form form-control','placeholder':'Password'}},) }}
                <br>
                {{ form_row(registrationForm.agreeTerms) }}
                <br>
                <button type="submit" class="btn btn-block btn-primary">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
